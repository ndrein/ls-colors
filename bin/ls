#!/usr/bin/python3
"""
Replacement for ls
"""
from sys import stdout, argv

from ls_colors.colorize_ls import colourize_ls

from ls_colors.command import Command


def ls(args):
    Command(args).run()
    # print(Command(args).stdout_lines())


# Only colorize output if the output is going to a terminal
if stdout.isatty():
    colourize_ls(argv)
    ls(argv)
